<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="cadastros.css">
  <title>Cadastros Salvos</title>
</head>
<body>
  <%- include("cabecalho") %>
  <%- include("menu") %>
  <%if (typeof(cadastros) == 'undefined' || cadastros.length == 0) {%>
    <h2>Não há cadastro.</h2>
    <%} else {%>
    <h1>Cadastros Salvos: </h1>
        <% cadastros.forEach(cadastro => {%>
          <a href="/cadastro?nome=<%=cadastro%>"><%=cadastro.split(".txt")[0]%></a> 
          <a href="/deletarCadastro?nome=<%=cadastro.split('.txt')[0]%>">deletar</a>
          <br>
        <%})%>
    <%}%>

    <a href="/" id="returnButton">Fazer novo cadastro</a>
</body>
</html>